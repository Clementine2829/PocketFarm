<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/buildVersionHolder"
        android:background="@drawable/borders"
        android:paddingTop="@dimen/padding_x_large"
        android:paddingBottom="@dimen/padding_x_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvVersionHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build version"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBuildVersionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvVersionHeading"
            tools:layout_editor_absoluteX="3dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutPocketFarmHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/borders"
        android:paddingTop="@dimen/padding_x_large"
        android:paddingBottom="@dimen/padding_x_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        app:layout_constraintEnd_toEndOf="@id/buildVersionHolder"
        app:layout_constraintStart_toStartOf="@id/buildVersionHolder"
        app:layout_constraintTop_toBottomOf="@+id/buildVersionHolder">

        <TextView
            android:id="@+id/tvAboutPocketFarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Pocket Farm"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/privacyPolicyHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/borders"
        android:paddingTop="@dimen/padding_x_large"
        android:paddingBottom="@dimen/padding_x_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        app:layout_constraintEnd_toEndOf="@id/aboutPocketFarmHolder"
        app:layout_constraintStart_toStartOf="@id/aboutPocketFarmHolder"
        app:layout_constraintTop_toBottomOf="@+id/aboutPocketFarmHolder">

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy policy"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/termsHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:clickable="true"
        android:paddingTop="@dimen/padding_x_large"
        android:paddingBottom="@dimen/padding_x_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        app:layout_constraintEnd_toEndOf="@id/privacyPolicyHolder"
        app:layout_constraintStart_toStartOf="@id/privacyPolicyHolder"
        app:layout_constraintTop_toBottomOf="@+id/privacyPolicyHolder">


        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; conditions"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/termsHolder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>