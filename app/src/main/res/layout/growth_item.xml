<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/green"
    android:padding="@dimen/padding_mid_small"
    android:layout_marginBottom="@dimen/padding_normal"
    android:id="@+id/growthItemHolder"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/img15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/farmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_xx_large"
            android:paddingStart="@dimen/padding_mid_small"
            android:layout_marginTop="@dimen/margin_mid_small"
            android:text="FARM ONE"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_xx_large"
            android:paddingStart="@dimen/padding_mid_small"
            android:layout_below="@+id/farmName"
            android:layout_toEndOf="@+id/imageView"
            android:text="LOW WATER"
            android:textColor="@color/dark_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/waterIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:drawableEnd="@drawable/ic_water_drop"
        android:layout_marginEnd="@dimen/margin_xxx_large"
        android:gravity="center_vertical"
        android:drawableTint="@color/orange" />
    <TextView
        android:id="@+id/sunIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:drawableEnd="@drawable/ic_sun"
        android:drawableTint="@color/red"
        android:layout_marginEnd="@dimen/margin_xxx_large"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/clickableIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:background="@color/green"
        android:drawableTint="@color/white"

        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_very_small"
        android:textStyle="italic"
        app:drawableRightCompat="@drawable/ic_arrow_forward" />


</RelativeLayout>